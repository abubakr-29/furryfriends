<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FurryFriends</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;900&family=Ubuntu&display=swap"
      rel="stylesheet"
    />

    <!-- CSS Stylesheets -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/detail.css" />

    <!-- Font Awesome -->
    <script
      src="https://kit.fontawesome.com/c3b67a82c8.js"
      crossorigin="anonymous"
    ></script>

    <!-- Bootstrap Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!-- Nav Bar -->

    <section id="navigation">
      <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href="/">furryfriends</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Contact</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/dogs">Buy Dogs</a>
              </li>
            </ul>
            <form class="d-flex" action="/search" method="post">
              <input
                class="form-control me-2"
                type="search"
                name="search"
                placeholder="Search Dogs"
                aria-label="Search"
              />
              <button class="btn btn-outline-light" type="submit">
                Search
              </button>
            </form>
            <% if (isLoggedIn) { %>
            <!-- Profile photo and dropdown menu -->
            <div class="dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                id="userDropdown"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <img
                  src="<%= userPhotoUrl %>"
                  alt="Profile Photo"
                  class="rounded-circle mx-2"
                  width="30"
                  height="30"
                />
              </a>
              <ul class="dropdown-menu" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </div>
            <% } %>
          </div>
        </nav>
      </div>
    </section>

    <!-- Dog Description -->

    <section id="dog-description">
      <div class="container-fluid">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center">
          <div class="col-lg-4 p-0 overflow-hidden shadow-lg">
            <img
              class="rounded-lg-3 description-picture img-fluid"
              src="/assets/images/<%= dogs.image_url %>"
              alt="free health checkup"
            />
          </div>
          <div class="col-lg-7 offset-lg-1 p-3 p-lg-5 pt-lg-3">
            <h1 class="heading lh-1 mb-4"><%= dogs.breed %></h1>
            <div class="detailed-description">
              <p>We have all type of pure breed <%= dogs.breed %> available:</p>
              <p>Male - Female</p>
              <% if (dogs.list_details) { %>
              <div class="list-details"><%- dogs.list_details %></div>
              <% } %>
              <p>
                100% pure breed, show quality puppies from high quality and
                healthy mother and father
              </p>
            </div>
            <p class="price-text">Price: Rs.<%= dogs.price %></p>
            <div
              class="d-grid gap-2 d-md-flex justify-content-md-start mt-4 mb-4 mb-lg-3"
            >
              <a href="/checkout" class="btn btn-success btn-lg px-4 me-md-2"
                >Buy Now</a
              >
              <a
                href="https://wa.me/8276058520"
                class="btn btn-outline-primary btn-lg"
                target="_blank"
                >Contact For Details</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="about">
      <div class="container-fluid">
        <h1 class="heading">About <%= dogs.breed %></h1>
        <p class="about-text"><%- dogs.about %></p>
      </div>
    </section>

    <section id="cta">
      <div class="container-fluid">
        <h2 class="heading">WhatsApp Us For More Details Or Queries</h2>
        <a
          href="https://wa.me/8276058520"
          class="btn btn-success btn-lg"
          target="_blank"
          ><i class="fa-brands fa-whatsapp"></i> WhatsApp Us</a
        >
      </div>
    </section>

    <footer>
      <div class="container-fluid">
        <h2 class="footer-heading">We Find Best Suitable Dog For Your Home</h2>
        <i class="social-icon fa-brands fa-twitter"></i>
        <i class="social-icon fa-brands fa-facebook-f"></i>
        <i class="social-icon fa-brands fa-instagram"></i>
        <i class="social-icon fa-solid fa-envelope"></i>
        <p>
          Â© <%= new Date().getFullYear() %> All rights reserved. FurryFriends
        </p>
      </div>
    </footer>
  </body>
</html>
